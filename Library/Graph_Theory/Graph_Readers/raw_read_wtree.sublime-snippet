int n;
cin >> n;
vector<vector<array<int, 2>>> adj(n);
for(auto i = 0; i < n - 1; ++ i){
	int u, v, w;
	cin >> u >> v >> w, -- u, -- v;
	adj[u].push_back({v, w}), adj[v].push_back({u, w});
}
